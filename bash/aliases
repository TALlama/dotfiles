. ~/.zsh/aliases

# changing directory to code project
function c { cd ~/code/$1; }

# alternative to "rails" command to use templates
function railsapp {
  template=$1
  appname=$2
  shift 2
  rails $appname -m http://github.com/ryanb/rails-templates/raw/master/$template.rb $@
}

# misc
alias reload='. ~/.bash_profile'
alias ll="ls -lhGF"
alias vm-diskTool="/Applications/VMware\ Fusion.app/Contents/MacOS/diskTool"
alias mate-reload="osascript -e 'tell app \"TextMate\" to reload bundles'"
alias grep="grep --color=auto"
alias ql="qlmanage -p"
alias psgrep="ps auxwww | grep"

# git
alias gst="git status"
alias gap="git add --patch"
alias gff="git ff"
alias gco="git checkout"
alias gci="git commit"
alias gdf="git diff"

# ruby
alias be="bundle exec"
alias r="bundle exec rspec"
function cuke() {
	mkdir -p results
	`ruby -e "puts %{bundle exec cucumber --format html --out results/#{'focused-' if ARGV.count > 0}cukes.html --format pretty #{ARGV.join(' ')}}" $*`
}
function peruse() {
	LOG=${1:-test}
    tail -f log/$LOG.log | grep --color=auto "Started" &
    tail -f log/$LOG.log | grep --color=auto "Parameters" &
    tail -f log/$LOG.log | egrep --color=auto 'Completed [0-9]{3}' &
}